<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MindVault.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MindVault.Presentation.Views;assembly=MindVault.Presentation"
    Title="MindVault.UI">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Note list"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />

    <ShellContent Title="Add a new note" Route="AddNotePage"
                  ContentTemplate="{DataTemplate views:AddNotePage}" />

</Shell>
