<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MindVault.Presentation.Popups.AddCategoryPopup">
    <VerticalStackLayout Padding="20">
        <Entry Placeholder="Nazwa kategorii" Text="{Binding NewCategoryName}" />
        <Button Text="Dodaj" Command="{Binding AddCategoryCommand}" />
    </VerticalStackLayout>
</ContentView>
